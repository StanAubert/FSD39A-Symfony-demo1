{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    {% for category in categories %}
    <div class=container-md>
        <div class="row">
            <div class="col text-center">
                <h3>{{category.name}}</h3>
                <img class="img-fluid"  src={{category.picture}} alt="">
                <a class="btn btn-outline-primary" href="{{ path('app_category', {slug:category.slug}) }}">Voir produits</a>
            </div>
        </div>
    </div>
        
    {% endfor %}
{% endblock %}
