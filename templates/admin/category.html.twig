{% extends 'admin_base.html.twig' %}

{% block title %}Categories Admin{% endblock %}

{% block body %}
<a class="btn btn-success" href="{{path("app_admin_category_add")}}">Add Category</a>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th class="text-center" colspan="5">Categories</th>
        </tr>
        <tr class="table-primary">
            <th>Name</th>
            <th>Description</th>
            <th>Slug</th>
            <th class="text-center" colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        {%for category in categories %}
            <tr class="table-active">
                <td>{{category.name}}</td>
                <td>{{category.description}}</td>
                <td>{{category.slug}}</td>
                <td><a href="{{path('app_admin_category_edit', {id:category.id})}}" class="btn btn-info">Modifier</a></td>
                <td><button class="btn btn-danger">Supprimer</button></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
